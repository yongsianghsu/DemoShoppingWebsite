    <style>
        button {
            height: 30px;
            width: 40px;
            border-radius: 10px;
            background-color:aliceblue;
          
        }
       
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
           
        }

        /* Global Styles */
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            color: #333;
            
        }
       
        h4 {
         color:red;
        }

        marquee{
            color:red;
            font-size:30px;
        }

        .container {
            width: 80%;
            margin: 0 auto;
        }

        header {
            background-color: #333;
            color: #fff;
            padding: 1rem 0;
            text-align: center;
        }

        nav {
            background-color: #666;
            padding: 0.5rem 0;
        }

            nav ul {
                list-style-type: none;
                text-align: center;
            }

                nav ul li {
                    display: inline;
                    margin-right: 1rem;
                }

                    nav ul li a {
                        color: #fff;
                        text-decoration: none;
                        padding: 0.5rem 1rem;
                    }

                        nav ul li a:hover {
                            background-color: #444;
                        }

        section {
            margin-top: 2rem;
        }

        .product {
            background-color: #fff;
            border-radius: 5px;
            box-shadow: 0 0 5px rgba(0,0,0,0.1);
            padding: 1rem;
            margin-bottom: 1rem;
        }

            .product img {
                max-width: 100%;
                height: auto;
                border-radius: 5px;
            }

            .product h2 {
                font-size: 1.5rem;
                margin-bottom: 0.5rem;
            }

            .product p {
                font-size: 1rem;
                margin-bottom: 0.5rem;
            }

            .product .price {
                font-weight: bold;
                color: #009688;
            }

        footer {
            background-color: #333;
            color: #fff;
            text-align: center;
            padding: 1rem 0;
            margin-top: 2rem;
        }
    </style>
</head>
