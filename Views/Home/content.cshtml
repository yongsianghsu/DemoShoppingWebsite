    <script>
        function toggleSidebar() {
            var sidebar = document.getElementById('sidebar');
            if (sidebar.style.left === '0px') {
                sidebar.style.left = '-200px'; // 收起側邊欄
            } else {
                sidebar.style.left = '0px'; // 彈出側邊欄
            }
        }
    </script>



